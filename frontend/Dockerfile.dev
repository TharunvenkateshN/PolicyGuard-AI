# Use Node.js LTS Alpine image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Set environment to development
ENV NODE_ENV=development

# Install dependencies first (better caching)
COPY package*.json ./
RUN npm install --legacy-peer-deps

# Copy source code
COPY . .

# Expose Next.js port
EXPOSE 3000

# Start production server for memory efficiency
CMD ["sh", "-c", "npm run build && npm run start -- -H 0.0.0.0"]
