# Google Gemini API Key
GOOGLE_API_KEY=your_api_key_here

# Gemini Model
GEMINI_MODEL=gemini-2.0-flash

# --- DB & Persistence Mode ---
# Set to 'false' to use local JSON storage (no Cloud DB needed)
USE_FIREBASE=true

# Firebase Config (Path to Service Account JSON or raw JSON string)
FIREBASE_CREDENTIALS=serviceAccountKey.json

# Optional: Vector DB config (defaults to local file search if not provided)
WEAVIATE_URL=http://localhost:8080
DATABASE_URL=postgresql://user:password@localhost:5432/policyguard
